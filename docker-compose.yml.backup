version: '3.8'
services:
  client:
    build:
      context: ./client
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    volumes:
      - ./client:/app
      - /app/node_modules
    depends_on:
      - server
    networks:
      - murmur-network

  server:
    build:
      context: ./server
      dockerfile: Dockerfile
    ports:
      - "5000:5000"
    volumes:
      - ./server:/app
      - /app/node_modules
    depends_on:
      - redis
    environment:
      - REDIS_HOST=redis
      - REDIS_PORT=6379
      - REDIS_PASSWORD=${REDIS_PASSWORD:-secretpassword}
      - JWT_SECRET=${JWT_SECRET:-murmur_jwt_secret_key}
      - JWT_EXPIRES_IN=7d
    networks:
      - murmur-network

  redis:
    image: redis:alpine
    # Corriger la commande en utilisant la syntaxe correcte
    command: redis-server --requirepass ${REDIS_PASSWORD:-secretpassword}
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    networks:
      - murmur-network

networks:
  murmur-network:
    driver: bridge

volumes:
  redis-data: